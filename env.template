# ==============================================
# LMS Environment Variables Template
# ==============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ==============================================
# DJANGO CORE SETTINGS
# ==============================================
DJANGO_ENV=production
DEBUG=False
DJANGO_SECRET_KEY=your-secret-key-here
PRIMARY_DOMAIN=your-domain.com
ALB_DOMAIN=your-alb-domain.com

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# AWS RDS PostgreSQL Database
AWS_DB_HOST=your-rds-endpoint.amazonaws.com
AWS_DB_NAME=your-database-name
AWS_DB_USER=your-database-user
AWS_DB_PASSWORD=your-database-password
AWS_DB_PORT=5432

# Alternative database environment variables
DATABASE_PASSWORD=your-database-password
DB_PASSWORD=your-database-password

# ==============================================
# AWS S3 CONFIGURATION
# ==============================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=eu-west-2
AWS_MEDIA_LOCATION=media

# ==============================================
# REDIS CACHE CONFIGURATION
# ==============================================
REDIS_URL=redis://your-redis-host:6379/0
CACHE_KEY_PREFIX=lms_production_

# ==============================================
# STATIC FILES CONFIGURATION
# ==============================================
STATIC_ROOT=/path/to/static/files
MEDIA_ROOT=/path/to/media/files

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
OUTLOOK_FROM_EMAIL=noreply@yourdomain.com
EMAIL_HOST=your-smtp-host
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email-user
EMAIL_HOST_PASSWORD=your-email-password

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOGS_DIR=/path/to/logs

# ==============================================
# NGINX CONFIGURATION
# ==============================================
NGINX_SERVER_NAME=your-server-name.com

# ==============================================
# SECURITY SETTINGS
# ==============================================
# Add any additional security-related environment variables here
